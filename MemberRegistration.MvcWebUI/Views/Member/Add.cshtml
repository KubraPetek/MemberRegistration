@model MemberRegistration.MvcWebUI.Models.MemberAddViewModel 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <title>Add</title>
</head>
<body class="bg-light">

    <div class="container">
        <main>
            <div class="py-5 text-center">
                <img class="d-block mx-auto mb-4" src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
                <h2>Kayıt Formu</h2>
                <p class="lead">Lütfen Bilgilerinizi Giriniz! </p>
                <p class="lead">@Html.ValidationMessage("MemberException") </p>
             
            </div>
            @using (Html.BeginForm())
            {
                <div class="row g-5">
                    <div class="col-md-12 col-lg-12">
                        <h4 class="mb-3">Bilgileriniz</h4>

                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label for="firstName" class="form-label">Adınız</label>
                                @Html.TextBoxFor(m=>m.Member.FirstName,new {@class="form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Member.FirstName, "", new { @class = "test-danger" })
                        <div class="col-sm-6">
                            <label for="lastName" class="form-label">Soyadınız</label>
                            @Html.TextBoxFor(m => m.Member.LastName, new { @class = "form-control" })
                        </div>
                            @Html.ValidationMessageFor(model => model.Member.LastName, "", new { @class = "test-danger" })
                            <div class="col-12">
                                <label for="tcNo" class="form-label">Tc Kimlik Numaranız</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"></span>
                                    @Html.TextBoxFor(m => m.Member.TcNo, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.Member.TcNo, "", new { @class = "test-danger" })
                        <div class="col-12">
                            <label for="email" class="form-label">Email</label>
                            @Html.TextBoxFor(m => m.Member.Email, new { @class = "form-control" })
                        </div>
                            @Html.ValidationMessageFor(model => model.Member.Email, "", new { @class = "test-danger" })
                        <div class="col-12">
                            <label for="dateOfBirth" class="form-label">Doğum Tarihiniz</label>
                            @Html.TextBoxFor(m => m.Member.DateOfBirth, new { @class = "form-control" })
                        </div>
                            @Html.ValidationMessageFor(model => model.Member.DateOfBirth, "", new { @class = "test-danger" })

                            <hr class="my-4">
                        </div>

                        <hr class="my-4">

                        <button class="w-100 btn btn-primary btn-lg" type="submit">Kayıt Ol</button>

                    </div>
                </div>
            }

        </main>

        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2017–2021 Company Name</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>


    <script src="/docs/5.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

    <script src="form-validation.js"></script>
</body>
</html>
